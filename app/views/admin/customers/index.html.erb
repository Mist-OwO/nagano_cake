<div class="container p-3">
  <div class="row">
    <%#= render 'admin/shared/header.html.erb' %>
    <div class="col-md-12">

      <h3>会員一覧</h3>

      <table class="table">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted %></td>
          </tr>
        <% end %>
      </table>

    </div>
    <%#= render 'admin/shared/footer.html.erb' %>
  </div>
</div>